@page
@model PersonalDataModel
@{
    ViewData["Title"] = @UILabels.PersonalDataTitle;
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <p>@UILabels.PersonalDataDeclaration</p>
        <p>
            <strong>@UILabels.PersonalDataDeletionWarning</strong>
        </p>
        <p>
            <form id="download-data" asp-page="DownloadPersonalData" method="post">
                <button class="btn btn-primary" type="submit">@UILabels.DownloadPersonalData</button>
            </form>
        </p>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">@UILabels.DeletePersonalData</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
