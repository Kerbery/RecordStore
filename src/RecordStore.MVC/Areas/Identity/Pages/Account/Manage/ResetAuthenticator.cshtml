@page
@model ResetAuthenticatorModel
@{
    ViewData["Title"] = @UILabels.ResetAuthenticatorTitle;
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3>@ViewData["Title"]</h3>
<div class="alert alert-warning" role="alert">
    <p>
        <span class="glyphicon glyphicon-warning-sign"></span>
        <strong>@UILabels.AuthentificatorKeyResetWarning</strong>
    </p>
    <p>@UILabels.AuthentificatorKeyResetDetails</p>
</div>
<div>
    <form id="reset-authenticator-form" method="post">
        <button id="reset-authenticator-button" class="btn btn-danger" type="submit">@UILabels.ResetAuthenticatorKeyAction</button>
    </form>
</div>
