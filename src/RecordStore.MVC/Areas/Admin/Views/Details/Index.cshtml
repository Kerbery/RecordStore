@{
    Layout = "../Shared/_AdminDashboardLayout.cshtml";
    ViewData["Title"] = "Manage Record Details";
}

<div class="row">
    <div class="col-6 px-3">
        <table class="table table-striped table-bordered">
            <thead>
                <tr class="table-primary">
                    <th colspan="4" scope="col">Categories</th>
                </tr>
                <tr class="table-info">
                    <th colspan="1" scope="col">Name</th>
                    <th colspan="3" scope="col">Parent Category</th>
                </tr>
            </thead>
            <tbody id="CategoriesBody">
                <tr>
                    <td colspan="4"><div class="d-flex justify-content-center"><div class="spinner-border" role="status" /></div></td>
                </tr>
            </tbody>
            <template id="CategoryTemplate">
                <tr id="Category-{{Id}}">
                    <td class="col-5">{{Name}}</td>
                    <td class="col-5">{{ParentCategory}}</td>
                    <td class="col-1 text-center"><a href="#" onclick="editCategory('{{Id}}')"><i class="bi bi-pencil"></i></a></td>
                    <td class="col-1 text-center"><a href="#" onclick="deleteCategory('{{Id}}')"><i class="bi bi-trash"></i></a></td>
                </tr>
            </template>
        </table>

        <table class="table table-striped table-bordered">
            <thead>
                <tr class="table-primary">
                    <th colspan="3" scope="col">Releases</th>
                </tr>
                <tr class="table-info">
                    <th colspan="3" scope="col">Name</th>
                </tr>
            </thead>
            <tbody id="ReleasesBody">
                <tr>
                    <td colspan="3"><div class="d-flex justify-content-center"><div class="spinner-border" role="status" /></div></td>
                </tr>
            </tbody>
            <template id="ReleaseTemplate">
                <tr id="Release-{{Id}}">
                    <td class="col-10">{{Name}}</td>
                    <td class="col-1 text-center"><a href="#" onclick="editRelease('{{Id}}')"><i class="bi bi-pencil"></i></a></td>
                    <td class="col-1 text-center"><a href="#" onclick="deleteRelease('{{Id}}')"><i class="bi bi-trash"></i></a></td>
                </tr>
            </template>
        </table>
    </div>

    <div class="col-6 px-3">
        <table class="table table-striped table-bordered">
            <thead>
                <tr class="table-primary">
                    <th colspan="3" scope="col">Genres</th>
                </tr>
                <tr class="table-info">
                    <th colspan="3" scope="col">Name</th>
                </tr>
            </thead>
            <tbody id="GenresBody">
                <tr>
                    <td><div class="d-flex justify-content-center"><div class="spinner-border" role="status" /></div></td>
                </tr>
            </tbody>
            <template id="GenreTemplate">
                <tr id="Genre-{{Id}}">
                    <td class="col-10">{{Name}}</td>
                    <td class="col-1 text-center"><a href="#" onclick="editGenre('{{Id}}')"><i class="bi bi-pencil"></i></a></td>
                    <td class="col-1 text-center"><a href="#" onclick="deleteGenre('{{Id}}')"><i class="bi bi-trash"></i></a></td>
                </tr>
            </template>
        </table>

        <table class="table table-striped table-bordered">
            <thead>
                <tr class="table-primary">
                    <th colspan="3" scope="col">Styles</th>
                </tr>
                <tr class="table-info">
                    <th colspan="3" scope="col">Name</th>
                </tr>
            </thead>
            <tbody id="StylesBody">
                <tr>
                    <td colspan="3"><div class="d-flex justify-content-center"><div class="spinner-border" role="status" /></div></td>
                </tr>
            </tbody>
            <template id="StyleTemplate">
                <tr id="Style-{{Id}}">
                    <td class="col-10">{{Name}}</td>
                    <td class="col-1 text-center"><a href="#" onclick="editStyle('{{Id}}')"><i class="bi bi-pencil"></i></a></td>
                    <td class="col-1 text-center"><a href="#" onclick="deleteStyle('{{Id}}')"><i class="bi bi-trash"></i></a></td>
                </tr>
            </template>
        </table>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript" src="@Url.Content("/js/details.js")"></script>
}