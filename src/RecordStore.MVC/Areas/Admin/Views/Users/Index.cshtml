@using RecordStore.Core.ViewModels.User
@{
    Layout = "../Shared/_AdminDashboardLayout.cshtml";
    ViewData["Title"] = "Manage Page";
}
@model IEnumerable<GetUserViewModel>

<h1>Manage existing users</h1>
<hr />
<a class="btn btn-primary" asp-area="Admin" asp-controller="Users" asp-action="Add">
    <i class="bi bi-person-plus"></i>
    Add User
</a>

<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th class="col-3" scope="col">Username</th>
                <th class="col-6" scope="col">Email</th>
                <th class="col-3" scope="col">Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td class="col-3">@user.Username</td>
                    <td class="col-6">@user.Email</td>
                    <td class="col-3">
                        <a class="btn btn-primary" role="button" asp-area="Admin" asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                        @if (user.IsLockedout)
                        {
                            <form class="d-inline-block" method="post" asp-action="RemoveLockout">
                                <input name="Id" value="@user.Id" hidden />
                                <button type="submit" class="btn btn-danger active">Remove Lockout</button>
                            </form>
                        }
                        else
                        {
                            <form class="d-inline-block" method="post" asp-action="Lockout">
                                <input name="Id" value="@user.Id" hidden />
                                <button type="submit" class="btn btn-danger">Lockout</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
