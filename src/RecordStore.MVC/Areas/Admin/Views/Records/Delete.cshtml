@model RecordStore.Core.ViewModels.Record.GetRecordViewModel

@{
    ViewData["Title"] = @UILabels.DeleteRecordTitle;
    Layout = "~/Areas/Admin/Views/Shared/_AdminDashboardLayout.cshtml";
}

<h1>@UILabels.DeleteRecordHeader</h1>

<h3>@UILabels.DeleteRecordConfirmationHeader</h3>
<div>
    <partial name="_RecordDetailsPartial"/>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@UILabels.DeleteRecordAction" class="btn btn-danger" />
    </form>
</div>
